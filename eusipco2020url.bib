@InProceedings{9287766,
  author = {A. Fascista and A. Coluccia and G. Ricci},
  booktitle = {2020 28th European Signal Processing Conference (EUSIPCO)},
  title = {Direct Position Estimation of a Mobile Receiver in Multipath Environments via Adaptive Beamforming},
  year = {2021},
